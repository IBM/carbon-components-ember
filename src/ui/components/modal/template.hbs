<button class="bx--btn bx--btn--primary" type="button" data-modal-target="#modal-{{guid}}">Show
  modal</button>

<div data-modal id="modal-{{guid}}" class="bx--modal " role="dialog"
     aria-modal="true" aria-labelledby="modal-{{guid}}-label" aria-describedby="modal-{{guid}}-heading" tabindex="-1">
  <div class="bx--modal-container">
    <div class="bx--modal-header">
      <p class="bx--modal-header__label bx--type-delta" id="modal-{{guid}}-label">
        {{yield 'label'}}
      </p>
      <p class="bx--modal-header__heading bx--type-beta" id="modal-{{guid}}-heading">
        {{yield 'header'}}
      </p>
      <button class="bx--modal-close" type="button" data-modal-close aria-label="close modal"  data-modal-primary-focus>
        <svg class="bx--modal-close__icon" width="10" height="10" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg">
          <title>Close Modal</title>
          <path d="M6.32 5L10 8.68 8.68 10 5 6.32 1.32 10 0 8.68 3.68 5 0 1.32 1.32 0 5 3.68 8.68 0 10 1.32 6.32 5z" fill-rule="nonzero"
          />
        </svg>
      </button>
    </div>

    <div class="bx--modal-content">
      {{yield 'content'}}
    </div>

  </div>
</div>