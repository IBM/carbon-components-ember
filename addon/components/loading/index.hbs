{{#if this.args.active}}
  {{#if this.args.overlay}}
      <div class="cds--loading-overlay"
           style="height: 100%"
        {{did-insert this.loadCarbonComponent}}
        {{will-destroy this.destroyCarbonComponent}}>
          <div data-loading class="cds--loading {{if this.args.small 'cds--loading--small'}} {{this.classNames}}" ...attributes>
              <svg class="cds--loading__svg" viewBox="-75 -75 150 150">
                  <title>Loading</title>
                {{#if @small}}
                    <circle class="cds--loading__background" cx="0" cy="0" r="37.5" />
                {{/if}}
                  <circle class="cds--loading__stroke" cx="0" cy="0" r="37.5" />
              </svg>
          </div>
      </div>
  {{else if @inline}}
      <div class="cds--inline-loading {{this.classNames}}" aria-live="assertive" style="margin-left: 1rem; width: initial; display: inline-block;"
        {{did-insert this.loadCarbonComponent}}
        {{will-destroy this.destroyCarbonComponent}}
           ...attributes
      >
          <div class="cds--inline-loading__animation">
              <div aria-label="Active loading indicator" aria-live="assertive" class="cds--loading cds--loading--small">
                  <svg class="cds--loading__svg" viewBox="-75 -75 150 150">
                      <title>Active loading indicator</title>
                      <circle class="cds--loading__background" cx="0" cy="0" r="37.5"></circle>
                      <circle class="cds--loading__stroke" cx="0" cy="0" r="37.5">
                      </circle>
                  </svg>
              </div>
          </div>
          <div class="cds--inline-loading__text">{{this.args.title}}</div>
      </div>
  {{else}}
      <div data-loading class="{{this.classNames}}"
        {{did-insert this.loadCarbonComponent}}
        {{will-destroy this.destroyCarbonComponent}}
           ...attributes>
          <svg class="cds--loading {{if this.args.small 'cds--loading--small'}} cds--loading__svg" viewBox="-75 -75 150 150">
              <title>Loading</title>
            {{#if this.args.small}}
                <circle class="cds--loading__background" cx="0" cy="0" r="37.5" />
            {{/if}}
              <circle class="cds--loading__stroke" cx="0" cy="0" r="37.5" />
          </svg>
      </div>
  {{/if}}
{{/if}}
