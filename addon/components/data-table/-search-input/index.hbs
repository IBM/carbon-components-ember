{{import SearchInput from 'carbon-components-ember/components/search-input'}}
{{import Loading from 'carbon-components-ember/components/loading'}}
{{import styles from './styles.scoped.scss'}}
{{import '{ fn }' from '@ember/helper'}}

<SearchInput
  @isLoading={{@isLoading}}
  @value={{@value}}
  @expandable={{@expandable}}
  @onChange={{this.doSearch}}
  class='{{if this.isSearching styles.is-searching}}'
/>
<Loading
  style='position: relative; top: -41px; right: 7px'
  @inline={{true}}
  @active={{this.isSearching}}
/>