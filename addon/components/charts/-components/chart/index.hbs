{{import DataSet from '../dataset'}}
{{import Axis from '../axis'}}
{{import ColorPairing from '../color/pairing'}}
{{import ColorScale from '../color/scale'}}
{{import set from 'carbon-components-ember/helpers/set'}}
{{import call from 'carbon-components-ember/helpers/call'}}

{{yield (hash
  DataSet=(component DataSet chart=this)
  Axis=(component Axis chart=this)
  ColorPairing=(component ColorPairing chart=this)
  ColorScale=(component ColorScale chart=this)
)}}

<div ...attributes
  {{did-insert this.loadChart}}
  {{did-update this.updateChart @labels @legendClickable @containerResizable}}
  {{will-destroy this.destroyChart}}
>
</div>

