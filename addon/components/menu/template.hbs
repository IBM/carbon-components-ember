{{import BasicDropdown from 'ember-basic-dropdown/components/basic-dropdown'}}
{{import Icon from '../icon'}}
{{import defaultTo from 'carbon-components-ember/helpers/default-to'}}
{{import Item from './-item'}}

<BasicDropdown as |dd|>
  <dd.Trigger class="bx--overflow-menu {{if dd.isOpen 'bx--overflow-menu--open'}}">
    <Icon @fill='white' @size=24 @icon={{defaultTo @icon 'overflow-menu'}} class='bx--overflow-menu__icon' />
  </dd.Trigger>
  <dd.Content class="bx--overflow-menu-options--open">
    <ul  {{on 'click' (fn dd.actions.close)}} style="display: block" class="bx--overflow-menu-options__content" tabindex="-1" data-floating-menu-direction={{defaultTo @direction 'buttom'}}>
        {{yield Item}}
    </ul>
  </dd.Content>
</BasicDropdown>